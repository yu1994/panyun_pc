// 背景图片
$bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
$media()
  @media (min-width )
    .container
      width 750px
  @media (min-width 992px)
    .container
      width 970px
  @media (min-width 1200px)
    .container
      width 1170px
$bg-size(x,y)
  -webkit-background-size: x,y
  background-size: x,y
// 不换行
$media-size()
  @media (max-width 1200px)
    .size-40
      font-size 40px !important; /*no*/
    .size-34
      font-size 34px !important; /*no*/
    .size-30
      font-size 30px !important; /*no*/
    .size-28
      font-size 28px !important; /*no*/
    .size-24
      font-size 24px !important; /*no*/
    .size-20
      font-size 20px !important; /*no*/
    .size-16
      font-size 16px !important; /*no*/
    .size-14
      font-size 14px !important; /*no*/
    .size-12
      font-size 12px !important; /*no*/
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
